{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "**/*.less",
    "**/*.css",
    "**/*.json"
  ],
  "verbose": true,
  "execMap": {
    "js": "babel-node",
    "ts": "ts-node -P tsconfig.server.json"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js ts"
}